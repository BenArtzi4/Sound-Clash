# Sound Clash Environment Variables Template
# Copy this file to .env/local.env for development or .env/production.env for production

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=soundclash_local
POSTGRES_USER=dev
POSTGRES_PASSWORD=your-password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# DynamoDB Tables (Production)
ACTIVE_GAMES_TABLE=sound-clash-active-games
GAME_SESSIONS_TABLE=sound-clash-game-sessions
BUZZ_EVENTS_TABLE=sound-clash-buzz-events
TEAM_CONNECTIONS_TABLE=sound-clash-team-connections

# Application Settings
NODE_ENV=development
LOG_LEVEL=info
JWT_SECRET=your-jwt-secret-key
CORS_ORIGINS=http://localhost:3000

# Service Ports
GAME_MANAGEMENT_PORT=8000
SONG_MANAGEMENT_PORT=8001
GAME_API_PORT=8002
WEBSOCKET_PORT=8003
MANAGER_CONSOLE_PORT=8004
PUBLIC_DISPLAY_PORT=8005
